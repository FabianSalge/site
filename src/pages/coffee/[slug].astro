---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Comments from '../../components/Comments.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const posts = await getCollection('coffee-posts');
  return posts.map((post: CollectionEntry<'coffee-posts'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

interface Props {
  post: CollectionEntry<'coffee-posts'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const headProps = {
  title: `${post.data.title} · Coffee`,
  description: post.data.excerpt || `Coffee visit: ${post.data.shopName}`,
  link: `${import.meta.env.SITE}/coffee/${post.slug}`
};

const formattedDate = post.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout headProps={headProps}>
  <article class="coffee-post">
    <header class="post-header">
      <a href="/coffee" class="back-link">← Coffee</a>
      <h1>{post.data.title}</h1>
      
      <div class="post-meta">
        <div class="shop-info">
          <h2 class="shop-name">{post.data.shopName}</h2>
          <span class="location">{post.data.location}</span>
        </div>
        
        <div class="rating-section">
          <div class="stars">
            {Array.from({ length: 5 }, (_, i) => (
              <span class={`star ${i < Math.floor(post.data.rating) ? 'filled' : i < post.data.rating ? 'half' : 'empty'}`}>
                {i < post.data.rating ? '★' : '☆'}
              </span>
            ))}
          </div>
          <span class="rating-value">{post.data.rating.toFixed(1)} / 5.0</span>
        </div>

        <time class="date">{formattedDate}</time>
      </div>
    </header>

    {post.data.images && post.data.images.length > 0 && (
      <div class="image-gallery">
        {post.data.images.map((image) => (
          <img src={image} alt={`Photo from ${post.data.shopName}`} />
        ))}
      </div>
    )}

    <div class="post-content">
      <Content />
    </div>

    <Comments />
  </article>
</BaseLayout>

<style>
  .coffee-post {
    width: 100%;
    max-width: 42em;
    margin: 0 auto;
  }

  .post-header {
    display: flex;
    flex-direction: column;
    gap: 1em;
    margin-bottom: 3em;
    padding-bottom: 2em;
    border-bottom: 1px solid var(--theme-sub-text);
  }

  h1 {
    font-size: 2em;
    font-weight: 500;
    margin: 0;
    color: var(--theme-text);
    line-height: 1.3;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: 1em;
  }

  .shop-info {
    display: flex;
    flex-direction: column;
    gap: 0.3em;
  }

  .shop-name {
    font-size: 1.2em;
    font-weight: 500;
    margin: 0;
    color: var(--theme-text);
  }

  .location {
    font-size: 0.95em;
    color: var(--theme-sub-text);
  }

  .rating-section {
    display: flex;
    align-items: center;
    gap: 0.8em;
  }

  .stars {
    display: flex;
    gap: 0.2em;
    font-size: 1.3em;
  }

  .star {
    color: var(--theme-sub-text);
  }

  .star.filled {
    color: var(--theme-accent);
  }

  .star.half {
    color: var(--theme-accent);
    opacity: 0.6;
  }

  .rating-value {
    font-size: 1em;
    color: var(--theme-text);
    font-weight: 500;
    font-variant-numeric: tabular-nums;
  }

  .date {
    font-size: 0.9em;
    color: var(--theme-sub-text);
    font-variant-numeric: tabular-nums;
  }

  .post-content {
    font-size: 1em;
    line-height: 1.8;
    color: var(--theme-text);
  }

  .post-content :global(h2) {
    font-size: 1.4em;
    font-weight: 500;
    margin-top: 2em;
    margin-bottom: 0.8em;
    color: var(--theme-text);
  }

  .post-content :global(h3) {
    font-size: 1.2em;
    font-weight: 500;
    margin-top: 1.5em;
    margin-bottom: 0.6em;
    color: var(--theme-text);
  }

  .post-content :global(p) {
    margin-bottom: 1.2em;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.2em;
    padding-left: 1.5em;
  }

  .post-content :global(li) {
    margin-bottom: 0.5em;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: var(--theme-text);
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-content :global(code) {
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
    background: var(--theme-bg);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    border: 1px solid var(--theme-sub-text);
  }

  .post-content :global(blockquote) {
    margin: 1.5em 0;
    padding-left: 1.5em;
    border-left: 3px solid var(--theme-accent);
    color: var(--theme-sub-text);
    font-style: italic;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 1.5em 0;
    border: 1px solid var(--theme-sub-text);
    opacity: 0.95;
  }

  .post-content :global(img:hover) {
    opacity: 1;
  }

  .image-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1em;
    margin: 2em 0;
  }

  .image-gallery img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid var(--theme-sub-text);
    opacity: 0.95;
    transition: opacity 0.2s ease;
  }

  .image-gallery img:hover {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .image-gallery {
      grid-template-columns: 1fr;
      gap: 0.8em;
    }

    .image-gallery img {
      height: 200px;
    }
    h1 {
      font-size: 1.6em;
    }

    .post-header {
      margin-bottom: 2em;
      padding-bottom: 1.5em;
    }

    .shop-name {
      font-size: 1.1em;
    }

    .stars {
      font-size: 1.1em;
    }

    .rating-value {
      font-size: 0.95em;
    }

    .post-content {
      font-size: 0.95em;
    }

    .tags {
      margin-top: 1.5em;
      padding-top: 1.5em;
    }
  }
</style>

