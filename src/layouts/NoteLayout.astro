---
import BaseLayout from './BaseLayout.astro';
import { siteConfig } from '../config';

interface Props {
  title: string;
  date: string;
}

const { title, date } = Astro.props;
const headProps = {
  title: `${title} - ${siteConfig.name}`,
  description: title,
  link: Astro.url.href
};
---

<BaseLayout headProps={headProps}>
  <article class="note">
    <header class="note-header">
      <a href="/" class="back-link">‚Üê Home</a>
      <h1>{title}</h1>
      <time datetime={date}>{date}</time>
    </header>
    
    <div class="note-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .note {
    width: 100%;
    max-width: 42em;
    margin: 0 auto;
  }

  .note-header {
    display: flex;
    flex-direction: column;
    gap: 0.8em;
    margin-bottom: 3em;
    padding-bottom: 2em;
    border-bottom: 1px solid var(--theme-sub-text);
  }

  .back-link {
    composes: back-link from global;
  }

  h1 {
    font-size: 1.8em;
    font-weight: 500;
    margin: 0;
    color: var(--theme-text);
    line-height: 1.3;
  }

  time {
    font-size: 0.9em;
    color: var(--theme-sub-text);
    font-variant-numeric: tabular-nums;
  }

  .note-content {
    line-height: 1.8;
  }

  .note-content :global(h2) {
    font-size: 1.3em;
    font-weight: 500;
    margin: 2em 0 0.8em;
    color: var(--theme-text);
  }

  .note-content :global(h3) {
    font-size: 1.1em;
    font-weight: 500;
    margin: 1.5em 0 0.6em;
    color: var(--theme-text);
  }

  .note-content :global(p) {
    margin: 1em 0;
  }

  .note-content :global(ul),
  .note-content :global(ol) {
    margin: 1em 0;
    padding-left: 1.5em;
  }

  .note-content :global(li) {
    margin: 0.5em 0;
  }

  .note-content :global(code) {
    background: var(--theme-code-block);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .note-content :global(pre) {
    background: var(--theme-code-block);
    padding: 1em;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5em 0;
  }

  .note-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .note-content :global(blockquote) {
    border-left: 3px solid var(--theme-accent);
    padding-left: 1em;
    margin: 1.5em 0;
    color: var(--theme-sub-text);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.5em;
    }

    .note-header {
      margin-bottom: 2em;
      padding-bottom: 1.5em;
    }
  }
</style>
